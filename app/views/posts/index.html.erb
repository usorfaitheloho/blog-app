<%= render "users/user", user: @user%>
<div class="container">
  <% @posts.each_with_index do |post, index| %>
    <%= render partial: "post", locals: { post: post, index: index } %>
      <ul>
        <% post.recent_comments.each do |comment| %>
          <li>
            <%= render "comments/comment", comment: comment %>
          </li>
        <% end %>
      </ul>
  <% end %>
</div>