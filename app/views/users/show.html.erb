<section>
<%= render 'user', user: @user %>
  <div>
    <h3>Bio</h3>
    <p><%= @user.Bio %></p>
  <div>
  <div>
    <% @posts.each_with_index do |post, index| %>
      <%= render partial: "posts/post" , locals: { post: post, index: index } %>
    <% end %>
  </div>
   <button class="button mt-4 p-2">
  See all posts
  </button>
</section> 