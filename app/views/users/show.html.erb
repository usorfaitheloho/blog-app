<section>
<%= render 'user', user: @user %>
  <div>
    <h3>Bio</h3>
    <p><%= @user.bio %></p>
  <div>
  <div>
    <% @posts.each_with_index do |post, index| %>
      <%= render partial: "posts/post" , locals: { post: post, index: index } %>
    <% end %>
  </div>
   <button class="button"><%= link_to "See all posts", user_posts_path(@user) %>
  </button>
</section> 